<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="4dp"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_width="40dp"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_backspace_white_24dp"
            android:text="@string/menu_webview_exit"
            android:id="@+id/btn_webview_exit"/>
        <view.MyAddressWebView
            android:id="@+id/ed_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_weight="5"/>
        <ImageButton
            android:id="@+id/btn_go"
            android:layout_width="40dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_done_white_24dp"
            android:textColor="@color/white"
            android:layout_height="match_parent"/>
        <ImageButton
            android:layout_width="40dp"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_white_24dp"
            android:text="@string/menu_webview_share"
            android:id="@+id/btn_webview_share"/>
    </LinearLayout>


</android.support.v7.widget.Toolbar>